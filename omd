from random import choice


incident = ['–ø–æ–∂–∞—Ä', '–ø–æ—Ç–æ–ø', '–æ—Ö–æ—Ç–Ω–∏–∫']
duck_with_umbrella = {
        '–ø–æ–∂–∞—Ä': '–ø—Ä–æ–º–æ–∫–ª–∞ –±—ã, –∫–æ–≥–¥–∞ –ø–æ–∂–∞—Ä —Ç—É—à–∏–ª–∏',
        '–ø–æ—Ç–æ–ø': '–Ω–µ —Å–º–æ–≥–ª–∞ –±—ã —É–ø—Ç—ã—Ç—å –∏–∑ —ç—Ç–æ–≥–æ –Ω–µ—Å—á–∞—Å—Ç–Ω–æ–≥–æ –±–∞—Ä–∞',
        '–æ—Ö–æ—Ç–Ω–∏–∫': '–æ—Ö–æ—Ç–Ω–∏–∫ –±—ã –∑–∞–º–µ—Ç–∏–ª –∏ –∑–∞—Å—Ç—Ä–µ–ª–∏–ª. '
        '–ê —Ç–∞–∫ –æ–Ω –ø–æ–¥—É–º–∞–ª, —á—Ç–æ —ç—Ç–æ –ø—Ä–æ—Å—Ç–æ –∑–æ–Ω—Ç–∏–∫ –ø–æ —É–ª–∏—Ü–µ –ª–µ—Ç–∞–µ—Ç'
    }
duck_without_umbrella = {
        '–ø–æ–∂–∞—Ä': '–µ–≥–æ —Ç—É—à–∏–ª–∏ –∏ —Å—Ç—Ä—É–µ–π –≤–æ–¥—ã —É—Ç–∫—É-–º–∞–ª—è—Ä–∞ –æ–∫–∞—Ç–∏–ª–∏. '
        '–ë–µ–¥–Ω–∞—è —É—Ç–∫–∞ –≤—Å—è –ø—Ä–æ–º–æ–∫–ª–∞, –≤—Å—è –ø—Ä–æ–¥—Ä–æ–≥–ª–∞',
        '–ø–æ—Ç–æ–ø': '–±—ã –Ω–µ –ø—Ä–∏—à–ª–æ—Å—å –≥—Ä–µ—Å—Ç–∏ —Å–≤–æ–∏–º–∏ –¥–≤—É–º—è',
        '–æ—Ö–æ—Ç–Ω–∏–∫': '–ø—Ä–∏—à–ª–æ—Å—å —É–±–µ–≥–∞—Ç—å —Å–æ –≤—Å–µ—Ö –Ω–æ–≥. '
        '–ú–æ–≥–ª–∞ –±—ã –∑–∞ –∑–æ–Ω—Ç–∏–∫–æ–º —Å–ø—Ä—è—Ç–∞—Ç—å—Å—è, –æ–Ω –±—ã –∏ –Ω–µ –∑–∞–º–µ—Ç–∏–ª'
    }


def step1():
    print(
        '–£—Ç–∫–∞-–º–∞–ª—è—Ä ü¶Ü —Ä–µ—à–∏–ª–∞ –≤—ã–ø–∏—Ç—å –∑–∞–π—Ç–∏ –≤ –±–∞—Ä. '
        '–í–∑—è—Ç—å –µ–π –∑–æ–Ω—Ç–∏–∫? ‚òÇÔ∏è'
    )
    option = ''
    options = {'–¥–∞': True, '–Ω–µ—Ç': False}
    while option not in options:
        print('–í—ã–±–µ—Ä–∏—Ç–µ: {}/{}'.format(*options))
        option = input()

    if options[option]:
        return step2_umbrella()
    return step2_no_umbrella()


def step2_umbrella():
    whats_happend = choice(incident)
    print(f'–£—Ç–∫–∞-–º–∞–ª—è—Ä –≤–∑—è–ª–∞ –∑–æ–Ω—Ç–∏–∫, –∏ –ø–æ—à–ª–∞ –≤ –±–∞—Ä. –ê —Ç–∞–º {whats_happend}!\n'
          f'–•–æ—Ä–æ—à–æ, —á—Ç–æ –∑–æ–Ω—Ç–∏–∫ –≤–∑—è–ª–∞, –∞ —Ç–æ {duck_with_umbrella[whats_happend]}.')


def step2_no_umbrella():
    whats_happend = choice(incident)
    print(f'–£—Ç–∫–∞-–º–∞–ª—è—Ä –Ω–µ –≤–∑—è–ª–∞ –∑–æ–Ω—Ç–∏–∫, –∏ –ø–æ—à–ª–∞ –≤ –±–∞—Ä. –ê —Ç–∞–º {whats_happend}!\n'
          f'–ö–∞–∫ –∂–∞–ª—å, —á—Ç–æ –∑–æ–Ω—Ç–∏–∫ –Ω–µ –≤–∑—è–ª–∞, –∞ —Ç–æ {duck_without_umbrella[whats_happend]}.')


if __name__ == '__main__':
    step1()
